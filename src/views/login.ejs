<%- include("includes/head") %> <%- include("includes/nav") %>

<div class="container">
  <div class="row">
    <div class="col-lg-2"></div>

    <div class="col-lg-8 my-4">
      <h1 class="text-center">Criar conta ou Entrar</h1>
      <p class="text-center lead">Faça login ou crie sua conta</p>

      <div class="row pt-5">
        <div class="col-lg">
          <h4>Faça seu Cadastro</h4>
          <p>Se Você não ainda não tem uma conta, cadastre abaixo.</p>
          <form action="/login/register" method="POST">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
              <input
                type="email"
                class="form-control"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label"
                >Sua senha</label
              >
              <input
                type="password"
                class="form-control"
                id="exampleInputPassword1"
              />
            </div>

            <button type="submit" class="btn btn-primary">
              Criar minha conta
            </button>
          </form>
        </div>
        <div class="col-lg">
          <h4>Entrar no sistema</h4>
          <p>Já tem uma conta? Faça login abaixo.</p>
          <form action="/login/login" method="POST">
            <div class="mb-3">
              <label for="exampleInputEmail1" class="form-label">Seu e-mail</label>
              <input
                type="email"
                class="form-control"
                id="exampleInputEmail1"
                aria-describedby="emailHelp"
                name="email"
              />
            </div>
            <div class="mb-3">
              <label for="exampleInputPassword1" class="form-label"
                >Sua senha</label
              >
              <input
                type="password"
                class="form-control"
                id="exampleInputPassword1"
              />
            </div>

            <button type="submit" class="btn btn-primary">
              Entrar
            </button>
          </form>
        </div>
      </div>
    </div>

    <div class="col-lg-2"></div>
  </div>
</div>
<%- include("includes/footer") %>
